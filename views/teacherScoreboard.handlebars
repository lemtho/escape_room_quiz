<body style="font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
    
    <!-- header-start -->
    <div style="height:100px;">
        <header>
            <div class="header-area" style="background-color:rgb(89,0,179)">
                <div class="main-header-area">
                    <div class="container-fluid p-0">
                        <div class="row align-items-center no-gutters" style="height:100px;">
                            <div class="col-xl-2 col-lg-2">
                                <div class="logo-img">
                                    <a href="/teacherHomePage">
                                        <img src="img/logo.png" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-7 col-lg-7">
                                <div class="main-menu  d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a href="/teacherHomePage">Home</a></li>
                                            <li><a href="/teacherQuiz">My Quizzes</a></li>
                                            <li><a href="/teacherStudents">My Students</a></li>
                                            <li><a class="active" href="/teacherScoreboard">Scoreboard</a></li>
                                            <li><a href="/teacherProfile">My Profile</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-xl-3 col-lg-3 d-none d-lg-block">
                                <div>
                                    <a href="/logout">
                                        <i style="color:white;" class="flaticon-user"></i>
                                        <span style="color:white;">Log Out</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>
    <!-- header-end -->

    <!-- content_area_start -->
    <div class="slider_area ">
        <div class="single_slider slider_bg_1" style="min-height:75vh; height:max-content; padding-top:5%; padding-bottom:5%;">
            <div class="container" style="text-align:center;">
                <div>
                    <h1 style="color:white;">My Quizzes</h1>
                </div>

                <div id="searchFilter">
                    <br>
                    <b>Search By: </b>
                    <input id="quizRadio" name="rad" type="radio" onclick="showQuizDrop()"/> Quiz Name
                    <input id="studentRadio" name="rad" type="radio" onclick="showStudentDrop()" /> Student Name
                </div>
                <br>

                <div id="quizDrop">
                    {{#if quizDrop}}
                        <select id="quizDropdown"> 
                            {{#each quizDrop}}
                                <option value="{{quizID}}">{{name}}</option>
                            {{/each}}
                        </select>
                        <button onclick="searchQuiz()">Search</button>
                    {{else}}
                        <h4><span style ="font-weight: normal; text-align: center">No scores to display.</span></h4>
                    {{/if}}
                </div>

                <div id="studentDrop">
                    {{#if studentDrop}}
                        <select id="studentDropdown"> 
                            {{#each studentDrop}}
                                <option value="{{studentID}}">{{lastName}}, {{firstName}}</option>
                            {{/each}}
                        </select>
                        <button onclick="searchStudent()">Search</button>
                    {{else}}
                            <h4><span style ="font-weight: normal; text-align: center">No scores to display.</span></h4>
                    {{/if}}
                </div>

                <br>
                <div id="displayScoresByQuiz">
                    <table id="quizTable" class="spacing" align="center">
                        {{#if quizScore}}
                            <div id="quizSortDrop">
                                <select id="quizSort">
                                    <option value="sortFirst">Sort By First Name</option>
                                    <option value="sortLast">Sort By Last Name</option>
                                    <option value="sortScore">Sort By Score</option>
                                </select>
                                <button onclick="sortStudents()">Sort</button>
                            </div>

                            <thead>
                                <tr>
                                    <th style="visibility: collapse;"></th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Score</th>
                                </tr>
                            </thead>

                            <tbody>
                                    {{#each quizScore}}
                                        <tr>
                                            <td id="quizID" style="visibility:collapse;">{{quizID}}</td>
                                            <td>{{firstName}}</td>
                                            <td>{{lastName}}</td>
                                            <td>{{actual_score}}</td>
                                            <td><button onclick = "window.location.href = '/teacherScoreboard/{{quizID}}/{{studentID}}';">Results</button></td>
                                            <td><button onclick="deleteStudentScore({{quizID}}, {{studentID}})">Delete</button></td>
                                        </tr>
                                    {{/each}}
                            </tbody> 
                        {{else}}
                                <h4><span style ="font-weight: normal; text-align: center">No scores to display.</span></h4>
                        {{/if}}
                    </table>
                </div>

                <div id="displayScoresByStudent">
                    <table id="studentTable" class="spacing" align="center">
                        {{#if studentScore}}
                            <div id="studentSortDrop">
                                <select id="studentSort">
                                    <option value="sortQuiz">Sort By Quiz Name</option>
                                    <option value="sortScore">Sort By Score</option>
                                </select>
                                <button onclick="sortQuizzes()">Sort</button>
                            </div>

                            <thead>
                                <tr>
                                    <th style="visibility: collapse;"></th>
                                    <th>Quiz Name</th>
                                    <th>Score</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each studentScore}}
                                    <tr>
                                        <td id="studentID" style="visibility:collapse;">{{studentID}}</td>
                                        <td>{{name}}</td>
                                        <td>{{actual_score}}</td>
                                        <input id="studentID" name="studentID" type="hidden" value="{{studentID}}">
                                        <td><button onclick = "window.location.href = '/teacherScoreboard/{{quizID}}/{{studentID}}';">Results</button></td>
                                    </tr>
                                {{/each}}
                            </tbody>

                        {{else}}
                            <h4><span style ="font-weight: normal; text-align: center">No scores to display.</span></h4>
                        {{/if}}
                    </table>
                </div>

                <div id="noScores">
                    <h4><span style ="font-weight: normal; text-align: center">No scores to display.</span></h4>
                </div>

                <div id="printResults">
                    <form>
                        <input type="button" id="printResult" value="Save My Results" onclick="window.print()">
                    </form>
                </div>

                <!-- Hidden divs -->
                <div id="fromTeacherQuizID">{{fromTeacherQuizID}}</div>
                <div id="fromTeacherQuizName">{{fromTeacherQuizName}}</div>
                <div id="fromTeacherHomeID">{{fromTeacherHomeID}}</div>
                
            </div>
        </div>
    </div>

    <!-- content_area_end -->

    <!-- footer -->
